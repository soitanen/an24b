<?xml version="1.0"?>

<!-- Button to start gasturbine GTD-16 of turbogenerator TG-16 (APU) -->

<PropertyList>
 <path>../../shared/switches/205k.ac</path>

<animation>
  <type>pick</type>
  <object-name>press_me</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
     <condition>
     <equals>
      <property>an24/AZS/sw0218</property>
      <value>1.0</value>
     </equals>
     </condition>
      <command>nasal</command>
      <script>
	<!--interpolate("an24/Start-Panel/tgtimer", 12.0, 6.0, 0.0, 6.0);
        if( getprop("an24/Start-Panel/tgtimer" ) > 0.0 ){-->
        <!--}
        else {
        setprop("/fdm/jsbsim/propulsion/tank[3]/priority", 0.0 );
        }-->
	setprop("/fdm/jsbsim/propulsion/cutoff_cmd", 0.0);
        setprop("/controls/engines/engine[2]/cutoff", 1.0);
        setprop("an24/Start-Panel/discontinuestarttg", 0.0 );
        setprop("/controls/engines/engine[2]/starter", 1.0 );
      </script>
    </binding>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("an24/animations/Start-Panel/starttg-btn", 1.0, 0.1 );
      </script>
    </binding>
   <mod-up>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("an24/animations/Start-Panel/starttg-btn", 0.0, 0.1 );
      </script>
    </binding>
   </mod-up>
  </action>
</animation>

<animation>
  <type>translate</type>
  <object-name>press_me</object-name>
  <property>an24/animations/Start-Panel/starttg-btn</property>
  <factor>0.003</factor>
  <axis>
    <x>0</x>
    <y>0</y>
    <z>-1</z>
  </axis>
</animation>

</PropertyList>
