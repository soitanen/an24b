<?xml version="1.0"?>

<!-- ARK  -->

<PropertyList>
 <path>nav_ark-ush.ac</path>

 <animation>
   <type>material</type>
   <object-name>ush_inner</object-name>
   <object-name>ush_middle</object-name>
   <object-name>ush_outer</object-name>
   <emission>
     <red>1.0</red>
     <green>0.7</green>
     <blue>0.4</blue>
   <factor-prop>/controls/lighting/nav_panel_instr_red</factor-prop>
   </emission>
 </animation>

 <animation>
   <type>material</type>
   <object-name>ush-face</object-name>
   <emission>
     <red>0.1</red>
     <green>0.02</green>
     <blue>0.02</blue>
   <factor-prop>/controls/lighting/nav_panel_instr_red</factor-prop>
   </emission>
 </animation>

<!--Needle-->
<animation>
    <type>rotate</type>
    <object-name>ush-needle1</object-name>
    <property>instrumentation/adf[0]/indicated-bearing-deg</property>
    <factor>-1.0</factor>
    <axis>
      <x>1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>

<animation>
    <type>rotate</type>
    <object-name>ush-needle2</object-name>
    <property>instrumentation/adf[1]/indicated-bearing-deg</property>
    <factor>-1.0</factor>
    <axis>
      <x>1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>

<!-- Compass knob -->

 <animation>
   <type>knob</type>
   <object-name>compass_knob</object-name>
   <property>an24/ARK-11/km-corr</property>
  <factor>2</factor>
  <center>
   <x-m>-0.0073</x-m>
   <y-m>0.0398</y-m>
   <z-m>-0.0526</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>an24/ARK-11/km-corr</property>
      <factor>1.0</factor>
      <min>-50</min>
      <max>50</max>                
      <wrap>false</wrap>
     </binding>
    </action>
 </animation>

<animation>
    <type>rotate</type>
    <object-name>km-ind</object-name>
    <property>an24/ARK-11/km-corr</property>
    <factor>1.0</factor>
    <axis>
      <x>1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>

<animation>
    <type>rotate</type>
    <object-name>ush_inner</object-name>
     <expression>
      <dif>
      <property>/instrumentation/gik-1/indicated-heading</property>
      <property>an24/ARK-11/km-corr</property>
      </dif>
     </expression>
     <axis>
      <x>1.0</x>
      <y>0.0</y>
      <z>0.0</z>
     </axis>
</animation>

<!-- Text OSG -->

  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">ARK ADF</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.05</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.005 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
    </offsets>
  </text>


</PropertyList>
