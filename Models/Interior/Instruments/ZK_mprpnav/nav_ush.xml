<!-- Heading indicator USH
3D instrument for Tu-154 -->
<PropertyList>
 <path>ush.ac</path>
<!-- Internal instruments lighting -->
<animation>
  <type>material</type>
  <object-name>index</object-name>
  <object-name>zk_compass</object-name>
  <object-name>zk_needle</object-name>
   <emission>
     <red>1.0</red>
     <green>0.4</green>
     <blue>0.4</blue>
     <factor-prop>/controls/lighting/nav_panel_instr_red</factor-prop>
   </emission>
</animation>

<!--Needles -->

<animation>
    <type>rotate</type>
    <object-name>zk_needle</object-name>
    <expression>
      <dif>
        <property>instrumentation/gpk-52/indicated-heading-deg</property>
        <property>instrumentation/zk2/heading-bug</property>
      </dif>
    </expression>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>zk_compass</object-name>
  <property>instrumentation/zk2/heading-bug</property>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

 <animation>
   <type>knob</type>
   <object-name>zk_knob</object-name>
   <property>instrumentation/zk2/heading-bug</property>
   <factor>-5</factor>
   <axis>
    <x>1</x>
    <y>0</y>
    <z>0</z>
   </axis>
   <center>
    <x-m>0</x-m>
    <y-m>-0.03</y-m>
    <z-m>-0.0306</z-m>
   </center>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>instrumentation/zk2/heading-bug</property>
      <factor>-1</factor>
      <min>0</min>
      <max>359</max>                
      <wrap>true</wrap>
     </binding>
    </action>
 </animation>

<!-- TEXT OSG -->

  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">ZK Gyropoly- compass Indicator</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.05</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.005 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
    </offsets>
  </text>
  <animation>
    <type>material</type>
    <object-name>textosg</object-name>
    <emission>
      <red>   1.0 </red>
      <green> 1.0 </green>
      <blue>  1.0 </blue>
    </emission>
  </animation>


</PropertyList>
