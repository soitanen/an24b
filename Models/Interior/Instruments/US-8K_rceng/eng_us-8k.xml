<?xml version="1.0"?>

<!-- US-8K radio station -->

<PropertyList>
  <path>us-8k.ac</path>

<model>
  <name>console-switch</name>
  <path>btn_console-switch.xml</path>
  <offsets>
    <x-m>-0.006</x-m>
    <y-m>-0.0112</y-m>
    <z-m>-0.0731</z-m>
    <pitch-deg>90</pitch-deg>
  </offsets>
</model>

 <animation>
  <type>pick</type>
  <object-name>back</object-name>
  <visible>false</visible>
 </animation>

 <animation>
   <type>material</type>
   <object-name>lightplate</object-name>
   <emission>
     <red>1.0</red>
     <green>1.0</green>
     <blue>0.7</blue>
     <factor-prop>/controls/lighting/radio_panel_instr</factor-prop>
   </emission>
 </animation>

<!-- Mode handle; OFF, telephone wtth, without gain control, telegraph with, without gc -->

 <animation>
   <type>knob</type>
   <object-name>mode_handle</object-name>
    <property>an24/US-8K/mode</property>
   <factor>30</factor>
  <center>
   <x-m>0.0</x-m>
   <y-m>-0.0507</y-m>
   <z-m>0.0553</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>an24/US-8K/mode</property>
      <factor>-1</factor>
      <min>0</min>
      <max>4</max>                
      <wrap>false</wrap>
     </binding>
    </action>
 </animation>

<!-- Band handle -->

 <animation>
   <type>knob</type>
   <object-name>band_handle</object-name>
    <property>an24/US-8K/band</property>
    <interpolation>
     <entry>
      <ind>0.0</ind> <dep>0.0</dep>
     </entry>
     <entry>
      <ind>1.0</ind> <dep>75.0</dep>
     </entry>
     <entry>
      <ind>2.0</ind> <dep>135.0</dep>
     </entry>
     <entry>
      <ind>3.0</ind> <dep>225.0</dep>
     </entry>
     <entry>
      <ind>4.0</ind> <dep>285.0</dep>
     </entry>
    </interpolation>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.0186</y-m>
   <z-m>0.0131</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>an24/US-8K/band</property>
      <factor>-1</factor>
      <min>0</min>
      <max>5</max>                
      <wrap>true</wrap>
     </binding>
    </action>
 </animation>

<!-- Antenna tune/adjust switch -->

 <animation>
  <type>pick</type>
  <object-name>clickspot_up</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
     <binding>
      <command>property-adjust</command>
      <property>an24/US-8K/ant-tune</property>
       <condition>
        <equals>
        <property>an24/AZS/sw0510</property>
        <value>1.0</value>
        </equals>
       </condition>
      <step>4</step>
      <min>0</min>
      <max>100</max>
      <wrap>false</wrap>
     </binding>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("an24/US-8K/lever_ant-tune", 1.0, 0.1 );
      </script>
    </binding>
    <mod-up>
      <binding>
      <command>nasal</command>
      <script>
        interpolate("an24/US-8K/lever_ant-tune", 0.0, 0.1 );
      </script>
    </binding>
    </mod-up>
  </action>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>clickspot_down</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
     <binding>
      <command>property-adjust</command>
      <property>an24/US-8K/ant-tune</property>
       <condition>
        <equals>
        <property>an24/AZS/sw0510</property>
        <value>1.0</value>
        </equals>
       </condition>
      <step>-4</step>
      <min>0</min>
      <max>100</max>
      <wrap>false</wrap>
     </binding>
     <binding>
      <command>nasal</command>
      <script>
        interpolate("an24/US-8K/lever_ant-tune", -1.0, 0.1 );
      </script>
     </binding>
    <mod-up>
     <binding>
      <command>nasal</command>
      <script>
        interpolate("an24/US-8K/lever_ant-tune", 0.0, 0.1 );
      </script>
     </binding>
    </mod-up>
  </action>
 </animation>

 <animation>
   <type>rotate</type>
   <object-name>ant-tune_lever</object-name>
   <property>an24/US-8K/lever_ant-tune</property>
  <interpolation>
    <entry><ind>-1.0</ind>	<dep>30.0</dep></entry>
    <entry><ind>1.0</ind>	<dep>-30.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>1.0</y>
    <z>0.0</z>
  </axis>
   <center>
    <x-m>0.0</x-m>
    <y-m>-0.0746</y-m>
    <z-m>-0.0527</z-m>
   </center>
 </animation>

<!-- -->

<!-- TEXT OSG -->

  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">US-8K Radio</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.02</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.08</max-height>
    <max-width>0.08</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.018</x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
    </offsets>
  </text>

</PropertyList>
