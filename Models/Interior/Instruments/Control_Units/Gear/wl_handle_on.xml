<?xml version="1.0"?>

<!-- Nosewheel steering by handle ON -->

<PropertyList>
 <path>../../../shared/lamps/sltsn.ac</path>

<animation>
 <type>material</type>
 <object-name>holder</object-name>
 <object-name>lampon</object-name>
 <texture>../../../shared/lamps/sltsngreen.png</texture>
</animation>

<animation>
 <type>select</type>
 <condition>
  <and>
   <equals>
    <property>controls/gear/nose-wheel-steering</property>
    <value>1.0</value>
   </equals>
   <equals>
    <property>controls/gear/steering</property>
    <value>45.0</value>
   </equals>
  </and>
  </condition>
 <object-name>lampon</object-name>
</animation>

</PropertyList>
