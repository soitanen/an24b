<?xml version="1.0"?>

<!-- R-802; Radio frequency memory station -->

<PropertyList>
 <path>r-802mem.ac</path>

 <animation>
  <type>material</type>
  <object-name>lightplate</object-name>
  <object-name>channels09</object-name>
  <emission>
   <red>1.0</red>
   <green>0.7</green>
   <blue>0.5</blue>
   <factor-prop>/controls/lighting/overhead_instr</factor-prop>
  </emission>
 </animation>

 <animation>
   <type>knob</type>
   <object-name>channel_sel</object-name>
   <property>an24/R-802/channel</property>
   <factor>-18</factor>
   <axis>
    <x>1</x>
    <y>0</y>
    <z>0</z>
   </axis>
   <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.05</z-m>
   </center>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>an24/R-802/channel</property>
      <factor>-1</factor>
      <min>1</min>
      <max>11</max>                
      <wrap>false</wrap>
     </binding>
    </action>
 </animation>

<animation>
  <type>rotate</type>
  <object-name>channels09</object-name>
  <property>an24/R-802/channel</property>
  <factor>36.0</factor>
  <axis>
    <x>1</x>
    <y>0</y>
    <z>0</z>
  </axis>
   <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.0177</z-m>
   </center>
</animation>

<animation>
  <type>pick</type>
  <object-name>memscrew</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("an24/R-802/memscrew", 1.0, 0.1 );
        settimer(func {interpolate("an24/R-802/memscrew", 0.0, 0.1 );},0.1);
      </script>
    </binding>
  </action>
</animation>

<animation>
  <type>translate</type>
  <object-name>memscrew</object-name>
  <property>an24/R-802/memscrew</property>
  <factor>0.0016</factor>
  <axis>
    <x>-1</x>
    <y>0</y>
    <z>0</z>
  </axis>
</animation>

 <animation>
   <type>knob</type>
   <object-name>r-802mem_volume</object-name>
   <property>an24/R-802/volume-1</property>
   <factor>-90</factor>
   <axis>
    <x>1</x>
    <y>0</y>
    <z>0</z>
   </axis>
   <center>
    <x-m>0.0</x-m>
    <y-m>0.0127</y-m>
    <z-m>0.0282</z-m>
   </center>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>an24/R-802/volume-1</property>
      <factor>-0.1</factor>
      <min>0</min>
      <max>1</max>                
      <wrap>false</wrap>
     </binding>
    </action>
   <hovered>
       <binding>
         <command>set-tooltip</command>
         <label>Volume: %3d%%</label>
         <measure-text>Volume: 100%</measure-text>
         <tooltip-id>r802-1-vol</tooltip-id>
         <mapping>percent</mapping>
         <property>an24/R-802/volume-1</property>
       </binding>
     </hovered>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>clickspot_up</object-name>
  <visible>false</visible>
  <!--action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("an24/R-802/sw0403", 1.0, 0.1 );
      </script>
    </binding>
  </action-->
</animation>

 <animation>
  <object-name>clickspot_middle</object-name>
  <type>pick</type>
  <visible>false</visible>
</animation>

 <animation>
  <type>pick</type>
  <object-name>clickspot_down</object-name>
  <visible>false</visible>
  <!--action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("an24/R-802/sw0403", 0.0, 0.1 );
      </script>
    </binding>
  </action-->
</animation>

