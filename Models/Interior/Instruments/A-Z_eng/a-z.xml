<?xml version="1.0"?>

<!-- A-Z, left STG-18 Amperemeter -->

<PropertyList>
 <path>a-z.ac</path>

 <animation>
   <type>material</type>
   <object-name>housing</object-name>
   <object-name>needle</object-name>
   <emission>
     <red>1.0</red>
     <green>0.7</green>
     <blue>0.7</blue>
     <factor-prop>/controls/lighting/panel-elec_red</factor-prop>
   </emission>
 </animation>

