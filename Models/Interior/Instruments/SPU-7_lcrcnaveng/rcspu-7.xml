<?xml version="1.0"?>

<!-- First Officer's SPU-7, crew/radio communication subscriber unit -->

<PropertyList>
  <path>spu-7.ac</path>

 <animation>
   <type>material</type>
   <object-name>light_plate</object-name>
   <emission>
     <red>1.0</red>
     <green>0.3</green>
     <blue>0.3</blue>
     <factor-prop>/controls/lighting/console-r_red</factor-prop>
   </emission>
 </animation>

<!-- Emergency call (set all stations listening and their volume up)-->

<animation>
  <type>pick</type>
  <object-name>press_me</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        if( getprop("an24/SPU-7/rc_emerg-call" ) == 1.0 ){
        setprop("an24/SPU-7/rc_emerg-call", 0.0 );
        }
        else {
        setprop("an24/SPU-7/rc_emerg-call", 1.0 );
        }
        interpolate("an24/animations/spu_rc-emerg", 1.0, 0.1 );
        settimer(func {interpolate("an24/animations/spu_rc-emerg", 0.0, 0.1 );},0.1);
      </script>
    </binding>
  </action>
</animation>

<animation>
  <type>translate</type>
  <object-name>press_me</object-name>
  <property>an24/animations/spu_rc-emerg</property>
  <factor>0.0016</factor>
  <axis>
    <x>-1</x>
    <y>0</y>
    <z>0</z>
  </axis>
</animation>

<!-- Source selector, -->

 <animation>
   <type>knob</type>
   <object-name>source_select</object-name>
   <property>an24/SPU-7/rc_source</property>
   <factor>32</factor>
   <axis>
    <x>-1</x>
    <y>0</y>
    <z>0</z>
   </axis>
   <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0027</z-m>
   </center>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>an24/SPU-7/rc_source</property>
      <factor>-1</factor>
      <min>0</min>
      <max>5</max>                
      <wrap>false</wrap>
     </binding>
    </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>spu-source_rc</tooltip-id>
      <label>Source: %s</label>
      <property>an24/SPU-7/rc_source</property>
      <mapping>nasal</mapping>
      <script>
        var spusourcerc = ['R-802 Comm1', 'US-8K HF/AM', 'R-836 HF/AM', 'R-802 Comm 2', 'ARK I', 'ARK II'];
        return spusourcerc[arg[0]];
      </script>
    </binding>
   </hovered>
 </animation>

<!-- "Listen" volume -->

 <animation>
   <type>knob</type>
   <object-name>vol_listen</object-name>
   <property>an24/SPU-7/listen_viewnr8</property>
   <factor>800</factor>
  <center>
   <x-m>0.0</x-m>
   <y-m>-0.0327</y-m>
   <z-m>0.0436</z-m>
  </center>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>an24/SPU-7/listen_viewnr8</property>
      <factor>-0.1</factor>
      <min>0</min>
      <max>1</max>
      <wrap>false</wrap>
     </binding>
    </action>
   <hovered>
       <binding>
         <command>set-tooltip</command>
         <label>Volume: %3d%%</label>
         <measure-text>Volume: 100%</measure-text>
         <tooltip-id>spu-list-vol_rc</tooltip-id>
         <mapping>percent</mapping>
         <property>an24/SPU-7/listen_viewnr8</property>
       </binding>
     </hovered>
 </animation>

<!-- "General" volume -->

 <animation>
   <type>knob</type>
   <object-name>vol_general</object-name>
   <property>an24/SPU-7/general_viewnr8</property>
   <factor>800</factor>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.0327</y-m>
   <z-m>0.0436</z-m>
  </center>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>/an24/SPU-7/general_viewnr8</property>
      <factor>-0.1</factor>
      <min>0</min>
      <max>1</max>
      <wrap>false</wrap>
     </binding>
    </action>
   <hovered>
       <binding>
         <command>set-tooltip</command>
         <label>Volume: %3d%%</label>
         <measure-text>Volume: 100%</measure-text>
         <tooltip-id>spu-gen-vol_rc</tooltip-id>
         <mapping>percent</mapping>
         <property>an24/SPU-7/general_viewnr8</property>
       </binding>
     </hovered>
 </animation>

