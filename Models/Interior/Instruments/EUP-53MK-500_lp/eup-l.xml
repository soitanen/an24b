<?xml version="1.0"?>

<!-- EUP-53MK-500, Turn Coordinator -->

<PropertyList>
 <path>eup.ac</path>

<!-- Internal instruments lighting -->
<animation>
  <type>material</type>
  <object-name>housing</object-name>
  <object-name>ball</object-name>
  <object-name>needle</object-name>
   <emission>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
     <factor-prop>an24/lights/instrlights</factor-prop>
   </emission>
</animation>

  
<!--Needle-->
<animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>instrumentation/turn-indicator/indicated-turn-rate</property>
    <condition>
      <property>an24/instrumentation/eup</property>
    </condition>
    <!-- 0.313 15 град
	0.7 30 град
	  1.21 45 град -->
    <interpolation>
      <entry><ind>	-1.21</ind>	<dep>	-27.0</dep></entry> 
      <entry><ind>	-0.7</ind>	<dep>	-17.4</dep></entry>
      <entry><ind>	-0.313</ind>	<dep>	-8.4</dep></entry>
       <entry><ind>	0.0</ind>	<dep>	0.0</dep></entry> 
      <entry><ind>	0.313</ind>	<dep>	9.0</dep></entry> 
      <entry><ind>	0.7</ind>	<dep>	18.3</dep></entry> 
      <entry><ind>	1.21</ind>	<dep>	26.0</dep></entry> 
    </interpolation>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>-0.023</z-m>
    </center>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>ball</object-name>
  <property>/fdm/jsbsim/instrumentation/slip-skid-indicator/slip-skid-deg</property>
  <interpolation>
    <entry><ind>	-10.0</ind>	<dep>	-10.0</dep></entry>
    <entry><ind>	10.0</ind>	<dep>	10.0</dep></entry>
  </interpolation>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>0.070</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!-- TEXT OSG -->

  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">EUP-53 Turn Coordinator</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.05</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.005 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
    </offsets>
  </text>
  <animation>
    <type>material</type>
    <object-name>textosg</object-name>
    <emission>
      <red>   1.0 </red>
      <green> 1.0 </green>
      <blue>  1.0 </blue>
    </emission>
  </animation>


</PropertyList>
