<!-- Electrical turn indicator EUP
3D instrument for Tu-154 -->
<PropertyList>
 <path>eup.ac</path>
<!-- Internal instruments lighting -->
<animation>
  <type>material</type>
  <!--<condition>
    <property>yak-40/switches/board_left</property>
    <greater-than>
      <property>yak-40/systems/electrical/buses/bus27/volts</property>
      <value>16.0</value>
    </greater-than>
  </condition>-->
  <object-name>back</object-name>
  <object-name>ball</object-name>
  <object-name>base</object-name>
  <object-name>bezel</object-name>
  <object-name>bezel.001</object-name>
  <object-name>needle</object-name>
   <emission>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
     <factor-prop>an24/lights/instrlights</factor-prop>
   </emission>
</animation>

  
<!--Needle-->
<animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>instrumentation/turn-indicator/indicated-turn-rate</property>
    <condition>
      <property>an24/instrumentation/eup</property>
    </condition>
    <!-- 0.313 15 град
	0.7 30 град
	  1.21 45 град -->
    <interpolation>
      <entry><ind>	-1.21</ind>	<dep>	-27.0</dep></entry> 
      <entry><ind>	-0.7</ind>	<dep>	-17.4</dep></entry>
      <entry><ind>	-0.313</ind>	<dep>	-8.4</dep></entry>
       <entry><ind>	0.0</ind>	<dep>	0.0</dep></entry> 
      <entry><ind>	0.313</ind>	<dep>	9.0</dep></entry> 
      <entry><ind>	0.7</ind>	<dep>	18.3</dep></entry> 
      <entry><ind>	1.21</ind>	<dep>	26.0</dep></entry> 
    </interpolation>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>-0.023</z-m>
    </center>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>ball</object-name>
  <property>/fdm/jsbsim/instrumentation/slip-skid-indicator/slip-skid-deg</property>
  <interpolation>
    <entry><ind>	-10.0</ind>	<dep>	-10.0</dep></entry>
    <entry><ind>	10.0</ind>	<dep>	10.0</dep></entry>
  </interpolation>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>0.070</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>



</PropertyList>
