<?xml version="1.0"?>

<PropertyList>
	<path>kppm.ac</path>

<animation>
  <type>material</type>
  <object-name>back</object-name>
  <object-name>back_0</object-name>
  <object-name>back_1</object-name>
  <object-name>base</object-name>
  <object-name>gs_blenker</object-name>
  <object-name>gs_blenker.001</object-name>
  <object-name>hs_blenker</object-name>
  <object-name>hs_blenker.001</object-name>
  <object-name>gs_needle</object-name>
  <object-name>hs_needle</object-name>
  <object-name>knob</object-name>
  <object-name>needle</object-name>
  <object-name>scale</object-name>
   <emission>
     <red>1.0</red>
     <green>0.5</green>
     <blue>0.5</blue>
     <factor-prop>/controls/lighting/panel-m_red</factor-prop>
   </emission>
</animation>

<animation>
	<type>rotate</type>
	<object-name>needle</object-name>
        <expression>
          <dif>
	    <property>/instrumentation/gik-1/indicated-heading</property>
            <property>/instrumentation/kppm[0]/scale-offset</property>
          </dif>
        </expression>
	<axis>
		<x>-1</x>
		<y>0</y>
		<z>0</z>
	</axis>
</animation>

<animation>
	<type>rotate</type>
	<object-name>scale</object-name>
	<property>/instrumentation/kppm[0]/scale-offset</property>
	<axis>
		<x>1</x>
		<y>0</y>
		<z>0</z>
	</axis>
</animation>

<animation>
	<type>translate</type>
	<object-name>hs_needle</object-name>
	<condition>
		<property>/instrumentation/nav[0]/nav-loc</property>
	</condition>
	<property>/instrumentation/nav[0]/heading-needle-deflection-norm</property>
	<interpolation>
		<entry><ind>-1</ind><dep>-0.019</dep></entry>
		<entry><ind>0.0</ind><dep>0.0</dep></entry>
		<entry><ind>1</ind><dep>0.019</dep></entry>
	</interpolation>
	<axis>
		<x>0.0</x>
		<y>1.0</y>
		<z>0.0</z>
	</axis>
</animation>

<animation>
	<type>translate</type>
	<object-name>gs_needle</object-name>
	<property>/instrumentation/nav/gs-needle-deflection</property>
	<interpolation>
		<!--<entry><ind>-9999.0</ind><dep>-0.0213</dep></entry>-->
		<entry><ind>-3.5</ind><dep>-0.019</dep></entry>
		<entry><ind>0.0</ind><dep>0.0</dep></entry>
		<entry><ind>3.5</ind><dep>0.019</dep></entry>
		<!--<entry><ind>9999.0</ind><dep>0.0213</dep></entry>-->
	</interpolation>
	<axis>
		<x>0.0</x>
		<y>0.0</y>
		<z>1.0</z>
	</axis>
</animation>

<animation>
    <type>select</type>
    <object-name>gs_blenker</object-name>
    <condition>
		<not>
			<property>/instrumentation/nav/has-gs</property>
		</not>
    </condition>
</animation>

<animation>
    <type>select</type>
    <object-name>hs_blenker</object-name>
    <condition>
		<not>
			<property>/instrumentation/nav/nav-loc</property>
		</not>
    </condition>
</animation>

<animation>
  <type>knob</type>
  <object-name>knob</object-name>
  <property>/instrumentation/kppm[0]/scale-offset</property>  
  <factor>-5</factor>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.02904</y-m>
    <z-m>-0.02885</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>/instrumentation/nav[0]/radials/selected-deg</property>
        <factor>-1</factor>
        <min>0</min>
        <max>360</max>                
        <wrap>true</wrap>
      </binding>
      <binding>
        <command>property-adjust</command>
        <property>/instrumentation/kppm[0]/scale-offset</property>
        <factor>-1</factor>
        <min>0</min>
        <max>360</max>                
        <wrap>true</wrap>
      </binding>
    </action>
</animation>

<!-- Text OSG -->

  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>/sim/panel-hotspots</property>
    </condition>
  </animation>

  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">KPPM</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.05</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.005 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
    </offsets>
  </text>

</PropertyList>
