<?xml version="1.0"?>

<!-- URVK-18, air flow indicator left engine to cabin -->

<PropertyList>
 <path>urvk-18.ac</path>

 <animation>
   <type>material</type>
   <object-name>urvk_housing</object-name>
   <object-name>urvk_needle</object-name>
   <emission>
     <red>1.0</red>
     <green>0.3</green>
     <blue>0.3</blue>
     <factor-prop>/controls/lighting/panel-m_red</factor-prop>
   </emission>
 </animation>

