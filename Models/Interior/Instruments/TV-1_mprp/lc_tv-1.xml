<?xml version="1.0"?>

<!-- TV-1, TG-16 temp (now OAT) -->

<PropertyList>
 <path>tv-1.ac</path>

 <animation>
   <type>material</type>
   <object-name>housing</object-name>
   <object-name>needle_pax_cabin_temp</object-name>
   <emission>
     <red>1.0</red>
     <green>0.3</green>
     <blue>0.3</blue>
     <factor-prop>/controls/lighting/console-l_red</factor-prop>
   </emission>
 </animation>

<animation>
  <type>rotate</type>
  <object-name>needle_pax_cabin_temp</object-name>
  <property>/environment/temperature-degc</property>
  <interpolation>
    <entry><ind>-60.0</ind><dep>-90.0</dep></entry>
    <entry><ind>0.0</ind><dep>10.0</dep></entry>
    <entry><ind>70.0</ind><dep>100.0</dep></entry>
  </interpolation>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!-- TEXT OSG -->

  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">TV-1</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.05</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.005 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
    </offsets>
  </text>

</PropertyList>
