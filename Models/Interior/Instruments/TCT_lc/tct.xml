<?xml version="1.0"?>

<!-- Thermometer TCT-2 -->
<PropertyList>

 <path>tct-2.ac</path>

 <animation>
   <type>material</type>
   <object-name>face</object-name>
   <object-name>oil_needle_1</object-name>
   <object-name>oil_needle_2</object-name>
   <emission>
     <red>1.0</red>
     <green>0.5</green>
     <blue>0.5</blue>
     <factor-prop>/controls/lighting/console-l_red</factor-prop>
   </emission>
 </animation>

<!--Needles-->
<animation>
    <type>rotate</type>
    <object-name>oil_needle_1</object-name>
    <property>/fdm/jsbsim/propulsion/engine[0]/cht-degc</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> -2.0 </dep></entry>
      <entry><ind> 300.0 </ind><dep> -115.0</dep></entry>
    </interpolation>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.022</y-m>
      <z-m>-0.0014</z-m>
    </center>
    <axis>
      <x>1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>oil_needle_2</object-name>
  <property>/fdm/jsbsim/propulsion/engine[0]/cht-degc</property>
  <interpolation>
    <entry><ind> 0.0 </ind><dep> 0.0 </dep></entry>
    <entry><ind> 300.0 </ind><dep> 105.0</dep></entry>
  </interpolation>
  <center>
    <x-m>0.0</x-m>
    <y-m>-0.022</y-m>
    <z-m>-0.0014</z-m>
  </center>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!-- TEXT OSG -->

  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">TCT</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.05</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.005 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
    </offsets>
  </text>

</PropertyList>
