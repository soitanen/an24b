<?xml version="1.0"?>

<!-- R-838 -->

<PropertyList>
 <path>r-836.ac</path>

<model>
  <name>lamp_ON</name>
  <path>sl_on.xml</path>
  <offsets>
    <x-m>-0.005</x-m>
    <y-m>-0.0342</y-m>
    <z-m>0.0385</z-m>
  </offsets>
</model>

<model>
  <name>lamp_console-inclusion</name>
  <path>rc_sl_console-incl.xml</path>
  <offsets>
    <x-m>-0.005</x-m>
    <y-m>-0.0004</y-m>
    <z-m>0.0385</z-m>
  </offsets>
</model>

 <animation>
   <type>material</type>
   <object-name>lightplate</object-name>
   <emission>
     <red>1.0</red>
     <green>0.4</green>
     <blue>0.4</blue>
     <factor-prop>/controls/lighting/console-r_red</factor-prop>
   </emission>
 </animation>

 <animation>
   <type>knob</type>
   <object-name>vol_knob</object-name>
   <property>an24/R-836/rc_volume</property>
   <factor>130</factor>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.0336</y-m>
   <z-m>-0.0286</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>an24/R-836/rc_volume</property>
      <factor>-0.1</factor>
      <min>0</min>
      <max>1</max>
      <wrap>false</wrap>
     </binding>
    </action>
 </animation>

 <animation>
   <type>knob</type>
   <object-name>mode_knob</object-name>
   <property>an24/R-836/rc_mode</property>
   <factor>35</factor>
   <axis>
    <x>-1</x>
    <y>0</y>
    <z>0</z>
   </axis>
   <center>
    <x-m>0.0</x-m>
    <y-m>0.0336</y-m>
    <z-m>0.0253</z-m>
   </center>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>an24/R-836/rc_mode</property>
      <factor>-1</factor>
      <min>0</min>
      <max>2</max>                
      <wrap>false</wrap>
     </binding>
    </action>
 </animation>

 <animation>
   <type>knob</type>
   <object-name>channel_knob</object-name>
   <property>an24/R-836/rc_channel</property>
   <factor>20</factor>
   <axis>
    <x>-1</x>
    <y>0</y>
    <z>0</z>
   </axis>
   <center>
    <x-m>0.0</x-m>
    <y-m>-0.0363</y-m>
    <z-m>-0.0284</z-m>
   </center>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>an24/R-836/rc_channel</property>
      <factor>-1</factor>
      <min>0</min>
      <max>18</max>                
      <wrap>true</wrap>
     </binding>
    </action>
 </animation>

<!-- Text OSG -->

  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">R-836 Radio</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.05</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.005 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
    </offsets>
  </text>

</PropertyList>
