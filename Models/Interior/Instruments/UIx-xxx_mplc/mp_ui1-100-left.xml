<?xml version="1.0"?>

<!-- UI1-100 of DIM-100T -->

<PropertyList>

 <path>ui1-100.ac</path>

 <animation>
  <type>material</type>
  <object-name>housing</object-name>
  <object-name>needle</object-name>
   <emission>
     <red>1.0</red>
     <green>0.4</green>
     <blue>0.3</blue>
     <factor-prop>/controls/lighting/panel-m_red</factor-prop>
   </emission>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>needle</object-name>
  <property>engines/engine[0]/thruster/torque</property>
   <factor>0.012</factor> <!-- fake value; torque where? --> 
   <offset-deg>-60</offset-deg>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
 </animation>

<!-- Text OSG -->

  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">UI1-100 Torque indicator</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.05</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.005 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
    </offsets>
  </text>

</PropertyList>
