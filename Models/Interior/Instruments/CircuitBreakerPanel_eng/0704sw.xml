<?xml version="1.0"?>

<!-- AZS-2; AGD-1, AI right pilot -->

<PropertyList>
 <path>../../shared/switches/azs.ac</path>
 
 <animation>
  <type>pick</type>
  <object-name>clickspot_up</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("an24/AZS/sw0704", 1.0, 0.1 );
      </script>
    </binding>
    <binding>
     <condition>
      <equals>
    	<property>/an24/instrumentation/sw_agd-r</property>
      <value>1.0</value>
      </equals>
     </condition>
     <command>nasal</command>
      <script>
	setprop("/an24/instrumentation/agd-r", 5.0 );
      </script>
    </binding>
  </action>
 </animation>

<animation>
  <type>pick</type>
  <object-name>clickspot_down</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("an24/AZS/sw0704", 0.0, 0.1 );
        setprop("an24/instrumentation/agd-r", 0.0 );
      </script>
    </binding>
  </action>
</animation>

 <animation>
   <type>rotate</type>
   <object-name>lever</object-name>
   <property>an24/AZS/sw0704</property>
  <interpolation>
    <entry><ind>0.0</ind>	<dep>-20.0</dep></entry>
    <entry><ind>1.0</ind>	<dep>20.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
 </animation>

</PropertyList>
