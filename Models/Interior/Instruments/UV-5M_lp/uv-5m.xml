<?xml version="1.0"?>

<!-- Pilot's radar altimeter -->

<PropertyList>
 <path>uv-5m.ac</path>

<!-- Radar altimeter (RV-UM) -->

 <animation>
   <type>material</type>
   <object-name>housing</object-name>
   <object-name>needle</object-name>
   <object-name>cover</object-name>
   <object-name>pointer</object-name>
   <emission>
     <red>1.0</red>
     <green>1.0</green>
     <blue>0.6</blue>
     <factor-prop>an24/lights/instrlights</factor-prop>
   </emission>
 </animation>

 <animation>
   <type>material</type>
   <object-name>flag</object-name>
   <emission>
     <red>0.5</red>
     <green>0.2</green>
     <blue>0.2</blue>
     <factor-prop>an24/lights/instrlights</factor-prop>
   </emission>
 </animation>

<animation>
  <type>rotate</type>
  <object-name>needle</object-name>
  <property>/instrumentation/radar-altimeter/radar-altitude-ft</property>
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>    0.0</dep></entry>
    <entry><ind>      328.1</ind>	<dep>  150.0</dep></entry>
    <entry><ind>     2460.6</ind>	<dep>  310.0</dep></entry>
  </interpolation>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

 <animation>
   <type>knob</type>
   <object-name>alt-select</object-name>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>/instrumentation/radar-altimeter/pointer-anim</property>
      <factor>-0.0125</factor> 
      <min>0</min>
      <max>1</max>                
      <wrap>false</wrap>
     </binding>
    </action>
 </animation>

<animation>
  <type>rotate</type>
  <object-name>pointer</object-name>
  <property>/instrumentation/radar-altimeter/pointer-anim</property>
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>    0.0</dep></entry>
    <entry><ind>      0.5</ind>	        <dep>  150.0</dep></entry>
    <entry><ind>      1.0</ind>	        <dep>  310.0</dep></entry>
  </interpolation>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>translate</type>
  <object-name>flag</object-name>
  <property>/instrumentation/radar-altimeter/serviceable</property>
  <factor>0.01</factor>
  <axis>
    <x>0.0</x>
    <y>1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!-- TEXT OSG -->

  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">RV-UM Radio Altimeter</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.05</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.005 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
    </offsets>
  </text>

</PropertyList>
