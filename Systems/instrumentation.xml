<?xml version="1.0"?>

<!--
**********************************************************************
Specific for AN-24B
static[9,10] and pitot[3] serve as passive "value receivers" from
selected static ports [0,1,7,8] or pitots[0,1]
**********************************************************************
-->

<PropertyList>

  <adf>
    <name>adf</name>
    <number>0</number>
  </adf>

  <adf>
    <name>adf</name>
    <number>1</number>
  </adf>

  <adf>
    <name>adf</name>
    <number>2</number>
  </adf>

  <adf>
    <name>adf</name>
    <number>3</number>
  </adf>

  <airspeed-indicator>
    <name>airspeed-indicator</name>
    <number>0</number>
    <total-pressure>/systems/pitot[3]/total-pressure-inhg</total-pressure> <!-- pitot[0] is swapable, need to fake it as [3] -->
    <static-pressure>/systems/static[9]/pressure-inhg</static-pressure> <!-- static[0] is swapable, need to fake it as [9] -->
  </airspeed-indicator>

  <airspeed-indicator>
    <name>airspeed-indicator</name>
    <number>1</number>
    <total-pressure>/systems/pitot[2]/total-pressure-inhg</total-pressure> <!-- pitot[2] is anyway unswapable, no need to fake it -->
    <static-pressure>/systems/static[10]/pressure-inhg</static-pressure> <!-- static port is, so fake it as [10] -->
  </airspeed-indicator>

  <altimeter>
    <name>altimeter</name>
    <number>0</number>
    <static-pressure>/systems/static[9]/pressure-inhg</static-pressure>
    <quantum>0</quantum>
    <tau>0</tau>
  </altimeter>

  <altimeter>
    <name>altimeter</name>
    <number>1</number>
    <static-pressure>/systems/static[10]/pressure-inhg</static-pressure>
    <quantum>0</quantum>
    <tau>0</tau>
  </altimeter>

  <attitude-indicator>
    <name>agd-l</name>
    <number>0</number>
    <suction>/an24/instrumentation/agd-l</suction>
  </attitude-indicator>

  <attitude-indicator>
    <name>agd-r</name>
    <number>1</number>
    <suction>/an24/instrumentation/agd-r</suction>
  </attitude-indicator>

  <clock>
    <name>clock</name>
    <number>0</number>
  </clock>

  <clock>
    <name>clock</name>
    <number>1</number>
  </clock>

  <clock>
    <name>clock</name>
    <number>2</number>
  </clock>

  <comm-radio>
    <name>comm</name>
    <number>0</number>>
  </comm-radio>

 <comm-radio>
    <name>comm</name>
    <number>1</number>>
  </comm-radio>

  <dme>
    <name>dme</name>
    <number>0</number>
  </dme>

  <marker-beacon>
    <name>marker-beacon</name>
    <number>0</number>
  </marker-beacon>

  <heading-indicator>
    <name>heading-indicator</name>
    <number>0</number>
    <suction>/systems/vacuum/suction-inhg</suction>
  </heading-indicator>

  <heading-indicator-dg>
    <name>heading-indicator-dg</name>
    <number>0</number>
  </heading-indicator-dg>

  <heading-indicator-fg>
    <name>heading-indicator-fg</name>
    <number>0</number>
  </heading-indicator-fg>
  
  <magnetic-compass>
    <name>magnetic-compass</name>
    <number>0</number>
  </magnetic-compass>

  <nav-radio>
    <name>nav</name>
    <number>0</number>
  </nav-radio>

  <nav-radio>
    <name>nav</name>
    <number>1</number>
  </nav-radio>

  <radar-altimeter>
    <name>radar-altimeter</name>
    <number>0</number>
    <update-interval-sec>0.1</update-interval-sec>
  </radar-altimeter>

  <slip-skid-ball>
    <name>slip-skid-ball</name>
    <number>0</number>
  </slip-skid-ball>

  <transponder>
    <name>transponder</name>
    <number>0</number>
    <mode type="int">1</mode> <!-- 0 = Mode A, 1 = Mode C, 2 = Mode S -->
    <encoder-path type="string">/instrumentation/altimeter</encoder-path><!--UVO-15 -->
    <kt70-compatibility type="bool">0</kt70-compatibility>
  </transponder>

  <turn-indicator>
    <name>turn-indicator</name>
    <number>0</number>
  </turn-indicator>

  <vertical-speed-indicator>
    <name>vertical-speed-indicator</name>
    <number>0</number>
    <static-pressure>/systems/static[9]/pressure-inhg</static-pressure>
  </vertical-speed-indicator>

  <vertical-speed-indicator>
    <name>vertical-speed-indicator</name>
    <number>1</number>
    <static-pressure>/systems/static[10]/pressure-inhg</static-pressure>
  </vertical-speed-indicator>


  <!--gps>
    <name>gps</name>
    <number>0</number>
  </gps>

  <radar>
    <name>wxradar</name>
    <number>0</number>
  </radar-->

</PropertyList>
